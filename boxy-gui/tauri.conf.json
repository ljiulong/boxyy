{
  "productName": "Boxy",
  "version": "0.3.1",
  "identifier": "com.boxy",
  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "../gui-frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Boxy",
        "width": 1320,
        "height": 860,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "主窗口启用核心事件能力",
          "windows": [
            "*"
          ],
          "permissions": [
            "core:default",
            "core:event:default",
            "shell:allow-open"
          ]
        }
      ]
    }
  },
  "bundle": {
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all"
  }
}